{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "css.validate": false,
  "scss.validate": false,
  "files.autoSaveDelay": 500,
  "editor.formatOnSave": false,
  "git.ignoreLimitWarning": true,
  "typescript.tsdk": "node_modules/typescript/lib"
}
